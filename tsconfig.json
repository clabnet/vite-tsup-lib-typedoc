{
    "compilerOptions": {
        "noImplicitAny": true,
        "outDir": "./build",
        "target": "es2018",
        "alwaysStrict":true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noFallthroughCasesInSwitch":true,
        "noUnusedLocals":true,
        "noUnusedParameters":true,
        "pretty": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "resolveJsonModule": true,
        "downlevelIteration": true
    },
    "include": [
        "./src/**/*"
    ]
    ,
    "exclude": [
        "./build",
        "node_modules"
    ]
}